<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actualizar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="147dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:text="ACTUALIZA"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="NOMBRE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="25dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>

            <EditText
                android:id="@+id/edtnombree"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName|textCapSentences"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="IDENTIFICACION"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtnombree" />

            <EditText
                android:id="@+id/edtidd"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="ESTRATO"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtidd" />

            <Spinner
                android:id="@+id/spinner_estrato"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:entries="@array/spinner_estrato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="SALARIO"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_estrato" />

            <EditText
                android:id="@+id/edtsalarioo"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="NIVEL EDUCATIVO"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtsalarioo" />


            <Spinner
                android:id="@+id/spinner_nivel"
                android:layout_width="345dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:entries="@array/spinner_nivel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:text="ACTUALIZAR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_nivel" />

            <Button
                android:id="@+id/btn_volver"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:text="VOLVER A LA LISTA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_actualizar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
